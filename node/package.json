{
  "name": "@malkab/rxredis",
  "version": "1.1.0",
  "description": "A RxJS Redis interface.",
  "scope": "@malkab",
  "author": {
    "name": "Juan Pedro Perez Alcantara",
    "email": "jp.perez.alcantara@gmail.com",
    "url": "http://me.com"
  },
  "main": "dist/main.js",
  "types": "dist/lib/index.d.ts",
  "keywords": [
    "Redis",
    "RxJS"
  ],
  "license": "UNLICENSED",
  "homepage": "https://github.com/owner/project#readme",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/malkab/code-samples.git"
  },
  "private": false,
  "scripts": {
    "clean": "rm -Rf build ; rm -Rf dist",
    "quick-test": "npm-run-all --parallel service:watch:quick-test:server service:build",
    "start": "npm-run-all --parallel service:watch:mocha:server service:build",
    "build": "npm run clean ; npm run service:build-lib ; npm run service:builddocs:html ; cp -R typedoc/build/html dist/docs",

    "service:build-lib": "webpack --config webpack-production.config.js --progress --colors",
    "service:build": "webpack --progress --colors",
    "service:watch:quick-test:server": "nodemon --inspect=0.0.0.0:9329 \"./build/quicktest.js\" --watch \"./build/quicktest.js\"",
    "service:watch:mocha:server": "nodemon --ext js --watch ./build/mocha.js --exec 'mocha --timeout 200000 ./build/mocha.js || true'",
    "service:builddocs:html": "cd typedoc ; ./html.sh ; cd ..",
    "service:builddocs:markdown": "cd typedoc ; ./markdown.sh ; cd ..",
    "service:builddocs": "npm run builddocs:html ; npm run builddocs:markdown"
  },
  "engines": {
    "node": "~8.9"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.12.0",
    "@types/redis": "^2.8.13",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^2.0.1",
    "mocha": "^6.2.1",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "terser": "^3.17.0",
    "terser-webpack-plugin": "^1.2.3",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.4.1",
    "tslint": "^5.14.0",
    "typedoc": "^0.14.2",
    "typedoc-plugin-markdown": "^1.1.27",
    "typescript": "^3.3.4000",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@malkab/ts-utils": "0.0.1",
    "hiredis": "^0.5.0",
    "redis": "^2.8.0",
    "rxjs": "^6.5.2"
  }
}
